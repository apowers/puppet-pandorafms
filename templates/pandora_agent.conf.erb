# General Parameters
# ==================

server_ip   <%= @server %>
server_path /var/spool/pandora/data_in
temporal    /tmp
logfile     /var/log/pandora/pandora_agent.log
include     <%= @module_dir %>/*.conf

agent_name  <%= @fqdn %>
description <%= @fqdn %>
address auto
autotime 1
interval 300
debug 0
udp_server 0
#udp_server_port 41122
#udp_server_auth_address 0.0.0.0

# Tentecle/SSH/FTP Client Communication
encoding   UTF-8
server_port 41121
transfer_mode tentacle
# server_pwd mypassword
# server_ssl no
# server_opts

# Agent Startup Options
delayed_startup 10
pandora_nice 10
remote_config 0
agent_threads 1
xml_buffer 1
temporal_min_size 1024

# Additional Options
# =================
<% @options.sort.each do |option,value| %>
<%= option %> <%= value %><% end %>

